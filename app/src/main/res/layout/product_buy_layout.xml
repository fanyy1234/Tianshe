<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">
    <TextView
        android:id="@+id/total_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@color/text_pressed"
        tools:text="￥333" />

    <TextView
        android:id="@+id/check_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/total_money"
        android:drawablePadding="3dp"
        android:drawableRight="@mipmap/small_arrow_down"
        android:text="明细" />

    <TextView
        android:id="@+id/btn_buy"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/common_radius_orange_shape"
        android:gravity="center"
        android:text="购买"
        android:textColor="@color/white" />
</RelativeLayout>