<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/login_bg"

    android:orientation="vertical"
    tools:context=".ui.login.LoginActivity">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:src="@mipmap/login_logo" />

    <com.sunday.common.widgets.ClearEditText
        android:id="@+id/edit_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@mipmap/user_alt"
        android:drawablePadding="10dp"
        android:background="@drawable/login_transparent_shape"
        android:hint="请输入手机号"
        android:inputType="number"
        android:padding="15dp"
        android:singleLine="true"
        android:textColor="@color/light_white"
        android:textColorHint="@color/light_white"
        android:textSize="15sp" />

    <com.sunday.common.widgets.ClearEditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/login_transparent_shape"
        android:drawableLeft="@mipmap/unlock"
        android:drawablePadding="10dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="@color/light_white"
        android:singleLine="true"
        android:textColorHint="@color/light_white"
        android:textSize="15sp" />


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/common_circle_orange_shape"
        android:text="登录"
        android:textSize="15sp"
        android:textColor="@color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp">
            <TextView
                android:id="@+id/text_findPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_white"
                android:textSize="13sp"
                android:text="忘记密码？" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="6dp">
            <TextView
                android:id="@+id/text_regist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_white"
                android:textSize="13sp"
                android:text="注册账号" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>