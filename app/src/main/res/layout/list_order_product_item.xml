<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pro_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/gray_background">

    <ImageView
        android:id="@+id/product_image"
        android:layout_marginTop="1px"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/default_img" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_alignTop="@+id/product_image"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/product_price"
        android:layout_toRightOf="@+id/product_image"
        android:maxLines="2"
        tools:text="香喷喷的熊掌" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/product_name"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        tools:text="4.5元" />

    <TextView
        android:id="@+id/product_params"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/product_image"
        android:visibility="gone"
        android:maxLines="1"
        tools:text="138g" />

    <TextView
        android:id="@+id/product_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/product_image"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        tools:text="X2" />

    <TextView
        android:id="@+id/product_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/product_image"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/product_image"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:textColor="@color/text_pressed"
        android:textSize="12sp"
        tools:text="40ml"/>

</RelativeLayout>