<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_index_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="14dp"
    android:paddingLeft="10dp"
    android:paddingTop="14dp">

    <ImageView
        android:id="@+id/news_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher" />
    <TextView
        android:id="@+id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/news_img"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="面部抗衰塑造"
        android:textColor="@color/text_not_pressed"/>
    <TextView
        android:id="@+id/news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/news_title"
        android:layout_toRightOf="@+id/news_title"
        android:gravity="right"
        android:layout_marginLeft="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        tools:text="2016-12-30"/>
    <TextView
        android:id="@+id/news_summary"
        android:layout_below="@+id/news_title"
        android:layout_alignLeft="@+id/news_title"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_light_black"
        tools:text="已兑换：2520"
        android:textSize="13sp"
        android:maxLines="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>