<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
<include layout="@layout/common_header"/>
    <View style="@style/h_line_no_padding" />

    <com.sunday.common.widgets.ClearEditText
        android:id="@+id/edit_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@mipmap/login_mobile"
        android:drawablePadding="10dp"
        android:hint="请输入手机号"
        android:singleLine="true"
        android:padding="15dp"
        android:textColorHint="@color/text_light_black"
        android:textSize="15sp" />

    <View style="@style/h_line_no_padding" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.sunday.common.widgets.ClearEditText
            android:id="@+id/edit_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/login_code"
            android:drawablePadding="10dp"
            android:hint="请输入验证码"
            android:maxLines="1"
            android:textColorHint="@color/text_light_black"
            android:textSize="15sp"
            android:padding="15dp"/>
        <View
            style="@style/v_line"/>
        <TextView
            android:id="@+id/send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送验证码"
            android:padding="15dp"
            android:textColor="@color/text_pressed"/>
</LinearLayout>
    <View style="@style/h_line_no_padding" />
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/common_radius_orange_shape"
        android:textColor="@color/white"
        android:text="确定"/>
</LinearLayout>