<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_header"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:text="填写留言"
        android:textColor="@color/text_black"
        android:textSize="15sp" />

    <com.sunday.common.widgets.ClearEditText
        android:id="@+id/edit_advice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_shape"
        android:gravity="top"
        android:hint="请输入..."
        android:maxLines="8"
        android:minLines="3"
        android:padding="15dp"
        android:textColorHint="@color/text_light_black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/common_radius_orange_shape"
        android:text="提交"
        android:textColor="@color/white"/>


</LinearLayout>