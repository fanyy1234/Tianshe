<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/common_header"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="#fff"
        android:layout_marginTop="2px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.sunday.common.widgets.ClearEditText
            android:id="@+id/user_phone"
            android:layout_marginLeft="5dp"
            android:textColorHint="@color/text_light_black"
            android:padding="16dp"
            android:drawableLeft="@mipmap/login_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:hint="请输入手机号"
            android:textSize="16sp"
            android:background="@null"
            android:inputType="text" />
        <View style="@style/h_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.sunday.common.widgets.ClearEditText
                android:id="@+id/edit_code"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/login_code"
                android:drawablePadding="10dp"
                android:hint="请输入验证码"
                android:maxLines="1"
                android:textColorHint="@color/text_light_black"
                android:textSize="15sp"
                android:padding="15dp"/>
            <View
                style="@style/v_line"/>
            <TextView
                android:id="@+id/send_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送验证码"
                android:padding="15dp"
                android:textColor="@color/text_pressed"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="#fff"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.sunday.common.widgets.ClearEditText
            android:id="@+id/et_newPwd"
            android:layout_marginLeft="5dp"
            android:padding="16dp"
            android:drawableLeft="@mipmap/login_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:hint="请输入新密码"
            android:textColorHint="@color/text_light_black"
            android:textSize="16sp"
            android:background="@null"
            android:inputType="text" />
        <View style="@style/h_line"/>
        <com.sunday.common.widgets.ClearEditText
            android:id="@+id/et_confirmPwd"
            android:layout_marginLeft="5dp"
            android:padding="16dp"
            android:drawableLeft="@mipmap/login_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:hint="请确认新密码"
            android:textSize="16sp"
            android:textColorHint="@color/text_light_black"
            android:background="@null"
            android:inputType="text" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_resetPwd"
        android:text="确定"
        style="@style/common_btn"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/common_radius_orange_shape"
        android:enabled="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
