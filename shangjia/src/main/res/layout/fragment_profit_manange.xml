<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@mipmap/earnings_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/text_not_pressed"
            android:text="收益管理"/>
        <LinearLayout
            android:id="@+id/ll_sell_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="本月营业额(元)：￥"/>
        <TextView
            android:id="@+id/sell_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="150000"/>
        </LinearLayout>
        <TextView
            android:id="@+id/introduce"
        android:layout_below="@+id/ll_sell_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            android:text="@string/profit_introduce"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:padding="15dp">
        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@color/text_light_black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="选择时间段进行查询"
            android:textColor="@color/text_black"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="1px"
            android:layout_alignParentRight="true"
            android:background="@color/text_light_black"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_select_time"
            android:layout_below="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/date"
                android:drawablePadding="3dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="日期"/>

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_toLeftOf="@+id/time"
                android:drawableLeft="@mipmap/date"
                android:drawablePadding="3dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="日期"/>
            <View
                android:layout_width="9dp"
                android:layout_height="1px"
                android:background="@color/text_light_black"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawableRight="@mipmap/arrow_down"
                tools:text="aaaaa"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:drawableRight="@mipmap/arrow_down"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                tools:text="aaaaa"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/txt1"
                android:layout_toEndOf="@+id/txt1"
                android:layout_marginStart="13dp" />
        </RelativeLayout>

            <ImageView
                android:id="@+id/profit_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/txt_income"
                android:layout_alignTop="@+id/txt_income"
                android:src="@mipmap/profit_01"/>
            <TextView
                android:id="@+id/txt_income"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/rl_select_time"
                android:layout_width="wrap_content"
                android:layout_alignLeft="@+id/check_income"
                android:layout_height="wrap_content"
                android:text="收入:"/>
            <TextView
                android:id="@+id/check_income"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/profit_img1"
                android:textColor="@color/text_pressed"
                android:drawableRight="@mipmap/arrow_right_blue"
                android:text="查看明细"/>

            <ImageView
                android:id="@+id/profit_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txt_cost"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/txt_cost"
                android:src="@mipmap/profit_02"/>
            <TextView
                android:id="@+id/txt_cost"
              android:layout_alignLeft="@+id/check_cost"
                android:layout_below="@+id/check_income"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成本:"/>
            <TextView
                android:id="@+id/check_cost"
                android:layout_width="wrap_content"
               android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/profit_img2"
                android:textColor="@color/text_pressed"
                android:drawableRight="@mipmap/arrow_right_blue"
                android:text="查看明细"/>


            <ImageView
                android:id="@+id/profit_img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/txt_profit"
                android:layout_alignTop="@+id/txt_profit"
                android:src="@mipmap/profit_03"/>
            <TextView
                android:id="@+id/txt_profit"
                android:layout_marginTop="30dp"
                android:layout_alignLeft="@+id/check_profit"
                android:layout_below="@+id/check_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="利润:"/>
            <TextView
                android:id="@+id/check_profit"
                android:layout_width="wrap_content"
                android:layout_alignLeft="@+id/check_cost"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/profit_img3"
                android:textColor="@color/text_pressed"
                android:text="@string/profit_intriduce01" />
        </RelativeLayout>

</LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>