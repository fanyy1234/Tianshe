<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/window_background">

    <include layout="@layout/common_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="设置子账号和密码"
        android:textColor="#323232"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="子账号："
            android:textColor="#666666"
            android:textSize="14sp" />

        <com.sunday.common.widgets.ClearEditText
            android:id="@+id/edit_child_account_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#323232"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_old_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="1px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone">

        <TextView
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="旧密码："
            android:textColor="#666666"
            android:textSize="14sp" />

        <com.sunday.common.widgets.ClearEditText
            android:id="@+id/edit_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#323232"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="1px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="密码："
            android:textColor="#666666"
            android:textSize="14sp" />

        <com.sunday.common.widgets.ClearEditText
            android:id="@+id/edit_set_pwd"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#323232"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:layout_marginTop="1px"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="确认密码："
            android:textColor="#666666"
            android:textSize="14sp" />

        <com.sunday.common.widgets.ClearEditText
            android:id="@+id/edit_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#323232"
            android:textColorHint="#999999"
            android:textSize="14sp" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="设置账号权限"
        android:textColor="#323232"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:padding="15dp">

        <RadioGroup
            android:id="@+id/rdg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/btn_all"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:button="@null"
                android:drawableRight="@drawable/radio_bg"
                android:gravity="center"
                android:text="全部" />
            <RadioButton
                android:id="@+id/btn_order"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:drawableRight="@drawable/radio_bg"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="仅订单" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/common_blue_radius_shape"
        android:textColor="@color/white"
        android:text="提交"/>
</LinearLayout>